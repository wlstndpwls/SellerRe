<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.sellerre.user.UserMapper">
	
	<resultMap type="com.project.sellerre.user.User" id="User">
		<result property="user_num" column="user_num"/>
		<result property="user_id" column="user_id"/>
		<result property="user_pw" column="user_pw"/>
		<result property="user_name" column="user_name"/>
		<result property="user_nickname" column="user_nickname"/>
		<result property="user_email" column="user_email"/>
		<result property="user_tel" column="user_tel"/>
		<result property="user_postcode" column="user_postcode"/>
		<result property="user_addr1" column="user_addr1"/>
		<result property="user_addr2" column="user_addr2"/>
		<result property="user_birthday" column="user_birthday"/>
		<result property="user_regdate" column="user_regdate"/>
		<result property="user_score" column="user_score"/>
		<result property="user_scorecount" column="user_scorecount"/>
		<result property="user_type" column="user_type"/>
	</resultMap>
	
	<!-- 유저 회원가입 -->
	<insert id="insertUser" parameterType="com.project.sellerre.user.User">
		INSERT INTO sellerre_user VALUES (
			seq_sellerre_user.nextval,
			#{user_id},
			#{user_pw},
			#{user_name},
			#{user_nickname},
			#{user_email},
			#{user_tel},
			#{user_postcode},
			#{user_addr1},
			#{user_addr2},
			#{user_birthday},
			sysdate,
			#{user_score},
			#{user_scorecount},
			#{user_type}
		)
	</insert>
	
	<!-- 유저 아이디로 검색 -->
	<select id="selectUserId" resultMap="User" parameterType="String">
		SELECT 	*
		FROM	sellerre_user
		WHERE 	user_id = #{user_id}
	</select>
	
	<!-- 유저 닉네임으로 검색 -->
	<select id="selectUserNickName" resultMap="User" parameterType="String">
		SELECT 	*
		FROM	sellerre_user
		WHERE 	user_nickname = #{user_nickname}
	</select>
	
	<!-- 유저 정보 수정 -->
	<update id="updateUser" parameterType="com.project.sellerre.user.User">
		UPDATE	sellerre_user
		
		SET		user_pw = #{user_pw}, 
				user_name = #{user_name}, 
				user_nickname = #{user_nickname}, 
				user_email = #{user_email}, 
				user_tel = #{user_tel}, 
				user_postcode = #{user_postcode}, 
				user_addr1 = #{user_addr1}, 
				user_addr2 = #{user_addr2}
				
		WHERE	user_id = #{user_id}
	</update>


	<!-- 유저 평점 업데이트 -->
	<update id="updateUserScore" parameterType="java.util.Map">
		UPDATE	sellerre_user
		SET		user_score = #{user_score}
		WHERE	user_id = #{user_id}
	</update>

	<!-- 유저 평점 카운트 업데이트 -->
	<update id="updateUserScoreCount" parameterType="String">
		UPDATE	sellerre_user
		SET		user_scorecount = user_scorecount + 1
		WHERE	user_id = #{user_id}
	</update>
	
	
	<!-- 아아디 중복 검색 -->
	<select id="idCheck" resultType="int" parameterType="String">
		SELECT 	COUNT(*)
		FROM	sellerre_user
 		WHERE 	user_id = #{user_id}
	</select>
	
	<!-- 닉네임 중복 검색 -->
	<select id="nicknameCheck" resultType="int" parameterType="String">
		SELECT 	COUNT(*)
		FROM	sellerre_user
 		WHERE 	user_nickname = #{user_nickname}
	</select>
	
	<!-- 이메일 중복 검색 -->
	<select id="emailCheck" resultType="int" parameterType="String">
		SELECT 	COUNT(*)
		FROM	sellerre_user
 		WHERE 	user_email = #{user_email}
	</select>
	
	<!-- 이메일 검색 -->
	<select id="selectUserEmail" resultMap="User" parameterType="String">
		SELECT 	*
		FROM	sellerre_user
		WHERE 	user_email = #{user_email}
	</select>
		
	<!-- 유저 삭제 -->
	<delete id="deleteUser" parameterType="String">
		DELETE 	FROM sellerre_user
		WHERE 	user_id = #{user_id}
	</delete>
	
	
	<!-- 총 유저 수 -->
   <select id="getTotalUserNum" resultType="int" >
      SELECT    COUNT(user_id) 
       FROM   sellerre_user 
   </select>
   
   <!-- 오늘 가입한 유저 수 -->
   <select id="getTodayUserNum" resultType="int">
      SELECT   COUNT(user_id) 
      FROM   sellerre_user 
      WHERE   TO_CHAR(user_regdate,'YYMMDD') = TO_CHAR(SYSDATE,'YYMMDD')
   </select>	
   
</mapper>